<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kyros.technologies.railapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".application.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/cmrl_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cmrl_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SignInActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LandingActivity" />
        <activity
            android:name=".activity.JobsScheduleActivity"
            android:label="Jobs Schedule" />
        <activity
            android:name=".activity.SignUpActivity"
            android:label="SignUp"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.JobDetailsActiviy"
            android:label="Job Details" />
        <activity
            android:name=".activity.TaskListActivity"
            android:label="Task List" />
        <activity
            android:name=".activity.AdminActivity"
            android:label="Admin Panel" />
        <activity android:name=".activity.AdminTaskListActivity"></activity>
    </application>

</manifest>